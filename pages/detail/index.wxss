.detail-main{

}
.detail-post{
  
}
.detail-post-header{
  border-bottom: 1px solid #80bd01;
  padding: 8px;
  margin-bottom: 10px;
}
.detail-title{
  font-size: 18px;
  color: #80bd01;
}

.detail-post-meta{
  padding: 0 8px;
  overflow: hidden;
}
.detail-avatar{
  height: 46px;
  width: 46px;
  float: left;
}
.detail-img{
  width: 46px;
  height: 46px;
  border-radius: 4px;
}
.detail-info{
  margin-left: 10px;
  display: inline-block;
  height: 46px;
  color: #666;
  font-size: 12px;
  margin-bottom: 15px;
}
.detail-author-name{
  font-size: 14px;
  margin-top: 8px;
  margin-bottom: 4px;
}
.content-info{
  font-size: 14px;
  color: #666;
}
.detail-content{
  margin-bottom: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #e6e6e6;
}
.detail-post-comment-item{
  margin-bottom: 8px;
  padding-bottom: 8px;
  border-bottom: 1px solid #f5f5f5;
  overflow: hidden;
}
.detail-comment-img{
  width: 46px;
  height: 46px;
  border-radius: 3px;
}
.detail-comment-avatar{
  float:left;
}
.detail-list{
  overflow: hidden;
  margin-left: 56px;
}
.detail-comment-content{
  font-size: 12px;
  color: #333;
  margin: 8px 0;
}
.detail-post-comment-time{
  margin-top: 5px;
  color: #666;
}
.detail-comment-text{
  line-height: 1.8;
}
.detail-no-comment{
  font-size: 18px;
  color: #000;
  text-align: center;
}